<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.walkap.x_android.MainActivity">




    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:id="@+id/uni_wrapper" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/userWelcome"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hello World!"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintHorizontal_bias="0.051"
                app:layout_constraintVertical_bias="0.032" />

            <Button
                android:id="@+id/btn_go"
                android:layout_below="@id/userWelcome"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="universityList"
                android:text="@string/uni_list"
                android:textAlignment="center"
                tools:ignore="MissingConstraints,NotSibling" />

            <Button
                android:id="@+id/addSchedulerButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="add scheduler"
                android:onClick="addScheduler"/>

        </LinearLayout>



    </RelativeLayout>



</android.support.constraint.ConstraintLayout>
